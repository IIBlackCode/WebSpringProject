<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 
	[page 131] 실행할 쿼리문 등록
// 1. Interface로 실행할 작업 등록
// 2. 실행할 쿼리문 Mapper 등록
// 3. 해당 인터페이스를 Overriding으로 구현
-->
<mapper namespace="org.swp.DAO.MemberMapper">
 
 	<select id="getTime" resultType="String">
 		select sysdate()
 	</select>
 	
 	<insert id="insertMember" parameterType="org.swp.VO.MemberVO">
 		insert into tbl_member 
 			(userid, userpw, username, email) 
 		values
 			(#{userid}, #{userpw}, #{username}, #{email})
 	</insert>
 	
 	<select id="readMember" resultType="org.swp.VO.MemberVO">
 		select * from tbl_member
 		where userid = #{userid}
 	</select>
 	
 	<select id="readWithPW" resultType="org.swp.VO.MemberVO">
 		select * from tbl_member
 		where userid = #{userid} and userpw = #{userpw} 
 	</select>
 		
</mapper>
